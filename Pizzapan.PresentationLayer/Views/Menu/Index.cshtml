@model IEnumerable<Category>


@{
    Layout = null;
    int a = 0;
}

<!DOCTYPE html>

<html>

@await Component.InvokeAsync("_HeadPartial")
<body>
    @await Component.InvokeAsync("_NavbarPartial")


    <!--Menu-->
    <div class="agileits-services  py-5" id="menu">
        <div class="container py-md-5">
            <div class="title-content text-center">
                <h6 class="sub-title">Special Menu</h6>
                <h3 class="title-big">Menu combo for you</h3>
            </div>
            <div class="pt-lg-5 pt-4">
                <div class="row menu-body">
                    <!-- Section starts: Appetizers -->
                    @foreach (var item in Model)
                    {
                        a++;

                        if (@item.CategoryID == a)
                        {
                            <div class="col-lg-6 menu-section pr-lg-5">
                                <h3 class="menu-section-title">@item.CategoryName</h3>
                                <!-- Item starts -->
                                @foreach(var item1 in item.Products)
                                {
                                    
                                <div class="menu-item">
                                    <div class="row border-dot no-gutters">
                                        <div class="col-8 menu-item-name">
                                            <h6>@item1.Name</h6>
                                        </div>
                                        <div class="col-4 menu-item-price text-right">
                                            <h6>@item1.Price</h6>
                                        </div>
                                    </div>
                                    <div class="menu-item-description">
                                        <p>@item1.Description</p>
                                    </div>
                                </div>
                                }
                                <!-- Item ends -->
                            </div>
                        }
                    }
                    <!-- Section ends: Appetizers -->
                </div>
            </div>
        </div>
    </div>

    @await Component.InvokeAsync("_FooterPartial")
    <!-- move top -->
    @await Component.InvokeAsync("_ScriptPartial")
</body>
</html>