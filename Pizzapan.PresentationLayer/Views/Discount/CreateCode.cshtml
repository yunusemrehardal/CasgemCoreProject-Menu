@model Discount
@{
    ViewData["Title"] = "CreateCode";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni İndirim Kodu Sayfası</h1>

<form method="post">
    <label>İndirim Kodu</label>
    <input type="text" class="form-control" asp-for="DiscountCode" value="@ViewBag.v" readonly />
    <br />
    <label>İndirim Kodu Kullanım Hakkı</label>
    <input type="text" class="form-control" asp-for="DiscountCount" style="background-color:lightgray" />
    <br />
    <button class="btn btn-primary">Kupon Oluştur</button>
</form>
