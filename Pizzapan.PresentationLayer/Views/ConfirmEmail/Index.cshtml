@model Pizzapan.PresentationLayer.Models.ConfirmMailViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <div class="container">
        <br />
        <br />

        <h4> Mail Onay Sayfası </h4>
